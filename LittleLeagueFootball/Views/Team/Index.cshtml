@model IEnumerable<LittleLeagueFootball.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<!-- View Teams Page -->
<h2>Little League's Football Teams</h2>

<!-- Display Simple List -->
<!-- Tables to Come in later weeks -->

<!-- Verify if any teams -->
<!-- if/else statement, Keep Model as variable -->
@if (Model == null || !Model.Any())
{
    <p>We apologize for any misunderstanding. Teams are still being organized and/or created. Please check back later. Thank you!</p>
}
else
{
    <!-- If team (variable) EXIST -->
    <!-- Use foreach loop -->
    @foreach (var team in Model)
    {
        <!-- Link TO Team's Roster -->
        <p>
            @team.Name - <a asp-controller="Team" asp-action="Roster" asp-route-id="@team.Id">Roster</a>
            - <a asp-controller="Team" asp-action="Edit" asp-route-id="@team.Id">Edit</a>
            - <a asp-controller="Team" asp-action="Delete" asp-route-id="@team.Id">Delete</a>
            - <a asp-action="RosterPrint" asp-route-id="@team.Id" target="_blank">Print Roster</a>
        </p>
    }
}

<!-- Navigation / Action Links -->
<p>
    <a asp-controller="Team" asp-action="Create">Create New Team</a> -
    <a asp-controller="Home" asp-action="Index">Home</a> - 
    <a asp-controller="Player" asp-action="Index">Players</a>
</p>